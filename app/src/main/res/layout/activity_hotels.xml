<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coxbazar6"
    android:orientation="vertical"
    android:gravity="center">

    <TextView

        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Hotels"
        android:layout_marginTop="5dp"
        android:textColor="#7d1aa7"
        android:textSize="40dp"
        android:background="@android:drawable/button_onoff_indicator_off"/>


    <Button
        android:id="@+id/starhotel5"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:text="5 STAR HOTEL"
        android:textSize="25dp"
        android:layout_height="50dp"
        android:background="@android:drawable/title_bar_tall"

        />
    <Button
        android:id="@+id/starhotel4"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:text="4 STAR HOTEL"
        android:textSize="25dp"
        android:layout_height="50dp"
        android:background="@android:drawable/title_bar"
        />
    <Button
        android:id="@+id/starhotel3"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:text="3 STAR Hotel"
        android:textSize="25dp"
        android:layout_height="50dp"
        android:background="@android:drawable/title_bar"
        />

</LinearLayout>
