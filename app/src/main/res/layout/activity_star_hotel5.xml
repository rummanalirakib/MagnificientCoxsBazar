<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coxbazar">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:id="@+id/starhotel5"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:text="5 Star Hotels"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#9b14a6"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="380dp"
            android:layout_height="260dp"
            android:id="@+id/longbeach11"
            android:layout_below="@id/starhotel5"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"

            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#fd000000"
            />
        <TextView
            android:layout_width="380dp"
            android:layout_height="300dp"
            android:id="@+id/longbeachp"
            android:layout_below="@id/longbeach11"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:background="@drawable/longbeach"
            />
        <TextView
            android:layout_width="380dp"
            android:layout_height="850dp"
            android:id="@+id/seagull11"
            android:layout_below="@id/longbeachp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#fd000000"
            />
        <TextView
            android:layout_width="380dp"
            android:layout_height="300dp"
            android:id="@+id/seagullp"
            android:layout_below="@id/seagull11"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:background="@drawable/seagull"
            />
        <TextView
            android:layout_width="380dp"
            android:layout_height="320dp"
            android:id="@+id/royaltulip11"
            android:layout_below="@id/seagullp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#fd000000"
            />
        <TextView
            android:layout_width="380dp"
            android:layout_height="300dp"
            android:id="@+id/royaltulipp"
            android:layout_below="@id/royaltulip11"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:background="@drawable/royaltulip"
            android:layout_marginBottom="40dp"
            />

    </RelativeLayout>

</ScrollView>