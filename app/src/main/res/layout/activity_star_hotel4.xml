<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coxbazar">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:id="@+id/starhotel4"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:text="4 Star Hotels"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#9b14a6"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="380dp"
            android:layout_height="270dp"
            android:id="@+id/coastal1"
            android:layout_below="@id/starhotel4"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#fd000000"
            />
        <TextView
            android:layout_width="380dp"
            android:layout_height="270dp"
            android:id="@+id/coastalp"
            android:layout_below="@id/coastal1"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:background="@drawable/coastal"
            />
        <TextView
            android:layout_width="380dp"
            android:layout_height="280dp"
            android:id="@+id/seacrown1"
            android:layout_below="@id/coastalp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#fd000000"
            />
        <TextView
            android:layout_width="380dp"
            android:layout_height="300dp"
            android:id="@+id/seacrownp"
            android:layout_below="@id/seacrown1"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:background="@drawable/crown"
            />
        <TextView
            android:layout_width="380dp"
            android:layout_height="280dp"
            android:id="@+id/kollol1"
            android:layout_below="@id/seacrownp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#fd000000"
            />
        <TextView
            android:layout_width="380dp"
            android:layout_height="270dp"
            android:id="@+id/kollolp"
            android:layout_below="@id/kollol1"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:background="@drawable/kollol"
            android:layout_marginBottom="40dp"
            />

    </RelativeLayout>

</ScrollView>