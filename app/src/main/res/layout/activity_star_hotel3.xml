<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coxbazar">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:id="@+id/starhotel3"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:text="3 Star Hotels"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#9b14a6"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="380dp"
            android:layout_height="270dp"
            android:id="@+id/mishuk"
            android:layout_below="@id/starhotel3"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"

            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#fd000000"
            />
        <TextView
            android:layout_width="380dp"
            android:layout_height="270dp"
            android:id="@+id/mishukp"
            android:layout_below="@id/mishuk"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:background="@drawable/mishuk"
            />
        <TextView
            android:layout_width="380dp"
            android:layout_height="280dp"
            android:id="@+id/oceanpalace"
            android:layout_below="@id/mishukp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"

            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#fd000000"
            />
        <TextView
            android:layout_width="380dp"
            android:layout_height="300dp"
            android:id="@+id/oceanpalacep"
            android:layout_below="@id/oceanpalace"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:background="@drawable/oceanpalace"
            android:layout_marginBottom="40dp"
            />

    </RelativeLayout>

</ScrollView>